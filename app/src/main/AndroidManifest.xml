<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.joelcamargojr.androidhub">

    <uses-permission android:name="android.permission.INTERNET" />

    <application
        android:name=".AndroidHubApplication"
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">

        <!--MainActivity-->
        <activity android:name=".MainActivity"
            android:launchMode="singleTop">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>

        <!--PodcastDetailActivity-->
        <activity
            android:name=".activities.PodcastDetailActivity"
            android:launchMode="singleTop"
            android:parentActivityName=".MainActivity"
            android:theme="@style/ActionBar">
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value=".MainActivity" />
        </activity>

        <!--EpisodePlayerActivity-->
        <activity android:name=".activities.EpisodePlayerActivity"
            android:theme="@style/ActionBar"
            android:launchMode="singleTop">
        </activity>

        <!-- Receivers-->
        <receiver android:name=".activities.EpisodePlayerActivity$MediaReceiver">
            <intent-filter>
                <action android:name="android.intent.action.MEDIA_BUTTON"/>
            </intent-filter>
        </receiver>

        <!--Services-->
        <service android:name=".PodcastAudioService">
            <intent-filter>
                <action android:name="android.media.browse.MediaBrowserService"/>
            </intent-filter>
        </service>
    </application>

</manifest>